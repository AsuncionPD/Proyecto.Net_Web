@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppWebBeachSA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppWebBeachSA.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
    <style>
        html, body {
            height: 100%; 
        }

        body {
            display: flex;
            flex-direction: column; 
        }

        main {
            flex: 1; 
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark text-white box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Hotel Beach</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @{
                        var tipoUsuario = HttpContextAccessor.HttpContext.Session.GetString("TipoUsuario");
                    }

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {

                            if (tipoUsuario == "1")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Empleados" asp-action="Home">Dashboard</a>
                                </li>
                            }
                            else
                            {
                                if (tipoUsuario == "2")
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-light" asp-area="" asp-controller="Clientes" asp-action="Index">Dashboard</a>
                                    </li>
                                }
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="" asp-action="">Hello @User.Identity.Name</a>
                            </li>
                            
                            if (tipoUsuario == "2")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Clientes" asp-action="Logout">Logout</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Empleados" asp-action="Logout">Logout</a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Clientes" asp-action="Login">Login &nbsp; <i class="fa-solid fa-user text-white"></i></a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div >
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="bg-dark text-white py-5 mt-auto">
        <div class="container">
            <div class="row">
               
                <div class="col-md-4" data-aos="fade-up">
                    <h5 class="fw-bold">Hotel Beach</h5>
                    <p class="text-secondary mt-3">
                        Experience comfort and tranquility at Hotel Beach. Your gateway to unforgettable stays and premium service.
                    </p>
                    <ul class="list-unstyled d-flex gap-3 mt-3">
                        <li>
                            <a href="#" class="text-white text-decoration-none fs-4 d-inline-block">
                                <i class="bi bi-facebook"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-white text-decoration-none fs-4 d-inline-block">
                                <i class="bi bi-twitter"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-white text-decoration-none fs-4 d-inline-block">
                                <i class="bi bi-instagram"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-white text-decoration-none fs-4 d-inline-block">
                                <i class="bi bi-linkedin"></i>
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                    <h5 class="fw-bold">Useful Links</h5>
                    <ul class="list-unstyled mt-3">
                        <li><a href="#about-us" class="text-secondary text-decoration-none d-block">About Us</a></li>
                        <li><a href="#services" class="text-secondary text-decoration-none d-block">Our Services</a></li>
                        <li><a href="#reservations" class="text-secondary text-decoration-none d-block">Reservations</a></li>
                        <li><a href="#contact" class="text-secondary text-decoration-none d-block">Contact</a></li>
                    </ul>
                </div>

                <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                    <h5 class="fw-bold">Contact Us</h5>
                    <ul class="list-unstyled mt-3">
                        <li class="mb-2">
                            <i class="bi bi-geo-alt-fill me-2 text-primary"></i>
                            <span class="text-secondary">123 Beach, Puntarenas</span>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-telephone-fill me-2 text-primary"></i>
                            <span class="text-secondary">+506 1234 5678</span>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-envelope-fill me-2 text-primary"></i>
                            <span class="text-secondary">info@hotelbeach.com</span>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="text-center mt-4" data-aos="fade-up">
                <p class="text-secondary">&copy; 2024 Hotel Beach. All rights reserved.</p>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 1000, // Tiempo de animación
            once: true, // Se ejecuta solo una vez
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
