@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel Employee Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
    <style>

        header h1 {
            font-size: 2.5rem;
        }

        header p {
            font-size: 1.2rem;
        }

        section {
            margin-bottom: 5rem;
        }

            section h2 {
                margin-bottom: 2rem;
            }


        .card-hover {
            transition: transform 0.4s ease, box-shadow 0.4s ease;
            z-index: 0;
        }

            .card-hover:hover {
                transform: scale(1.05);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
                z-index: 1;
            }


        .dashboard-btn {
            font-size: 1.3rem;
            padding: 15px 20px;
            text-align: center;
        }

        .btn-lg {
            font-size: 1.4rem;
            padding: 15px 25px;
        }


        .list-group-item .badge {
            font-size: 1.2rem;
            padding: 8px 16px;
        }

        .list-group-item {
            font-size: 1.1rem;
        }
    </style>
</head>
<body>

    <header class="bg-primary text-white text-center py-4">
        <div class="container">
            <h1 class="display-5 fw-bold">Employee Dashboard</h1>
            <p class="lead">Manage reservations, packages, and hotel operations efficiently</p>
        </div>
    </header>

    <main class="container">
        <div class="row g-4 mt-3">
            <div class="col-md-6" data-aos="zoom-in">
                <div class="card border-0 shadow card-hover">
                    <div class="card-body text-center">
                        <i class="bi bi-box-seam display-4 text-primary mb-3"></i>
                        <h5 class="card-title section-title">Manage Packages</h5>
                        <p class="card-text text-muted">Add, edit, or delete hotel packages for your customers.</p>
                        <a asp-action="Index" asp-controller="Paquetes" class="btn btn-primary dashboard-btn">Go to Packages</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6" data-aos="zoom-in" data-aos-delay="200">
                <div class="card border-0 shadow card-hover">
                    <div class="card-body text-center">
                        <i class="bi bi-calendar-event display-4 text-success mb-3"></i>
                        <h5 class="card-title section-title">Manage Reservations</h5>
                        <p class="card-text text-muted">View, modify, or cancel customer reservations.</p>
                        <button class="btn btn-success dashboard-btn">Go to Reservations</button>
                    </div>
                </div>
            </div>
        </div>

        <section data-aos="fade-up">
            <h2 class="text-center section-title mt-3">Employee Statistics</h2>
            <div class="row g-4 text-center">
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm card-hover">
                        <div class="card-body">
                            <i class="bi bi-people display-4 text-warning mb-3"></i>
                            <h5 class="section-title">Active Employees</h5>
                            <p class="fs-4 fw-bold">24</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm card-hover">
                        <div class="card-body">
                            <i class="bi bi-calendar2-check display-4 text-info mb-3"></i>
                            <h5 class="section-title">Completed Reservations</h5>
                            <p class="fs-4 fw-bold">125</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm card-hover">
                        <div class="card-body">
                            <i class="bi bi-box display-4 text-danger mb-3"></i>
                            <h5 class="section-title">Packages Available</h5>
                            <p class="fs-4 fw-bold">18</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section data-aos="fade-up">
            <h2 class="text-center section-title">Notifications</h2>
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    New reservation by John Doe for Deluxe Room
                    <span class="badge bg-primary rounded-pill">View</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Package "Weekend Getaway" has been updated
                    <span class="badge bg-warning text-dark rounded-pill">Details</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Reminder: Staff meeting at 3 PM
                    <span class="badge bg-success rounded-pill">Dismiss</span>
                </li>
            </ul>
        </section>

        <section class="text-center" data-aos="fade-up">
            <h2 class="section-title">Quick Actions</h2>
            <div class="d-flex flex-wrap justify-content-center gap-3">
                <button class="btn btn-outline-primary btn-lg">
                    <i class="bi bi-person-plus me-2"></i>Add Employee
                </button>
                <button class="btn btn-outline-danger btn-lg">
                    <i class="bi bi-boxes me-2"></i>Update Inventory
                </button>
                <button class="btn btn-outline-success btn-lg">
                    <i class="bi bi-card-checklist me-2"></i>Generate Report
                </button>
            </div>
        </section>

        <section data-aos="fade-up">
            <h2 class="text-center section-title">Gallery Management</h2>
            <p class="text-center text-muted mb-4">Upload and manage images to showcase your hotel.</p>

            <div class="row g-4 justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="card border-0 shadow card-hover">
                        <div class="card-body text-center">
                            <i class="bi bi-cloud-upload display-4 text-primary mb-3"></i>
                            <h5 class="card-title section-title">Upload Image</h5>
                            <p class="card-text text-muted">Add new images to the gallery for your customers.</p>
                            <input type="file" class="form-control mb-3" accept="image/*">
                            <button class="btn btn-primary dashboard-btn">Upload</button>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-8">
                    <div class="row g-3">
                        <div class="col-6 col-sm-4">
                            <div class="card border-0 shadow-sm">
                                <img src="https://via.placeholder.com/150" class="card-img-top" alt="Image 1">
                                <div class="card-body text-center">
                                    <button class="btn btn-danger btn-sm w-100">
                                        <i class="bi bi-trash3 me-1"></i>Remove
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-sm-4">
                            <div class="card border-0 shadow-sm">
                                <img src="https://via.placeholder.com/150" class="card-img-top" alt="Image 2">
                                <div class="card-body text-center">
                                    <button class="btn btn-danger btn-sm w-100">
                                        <i class="bi bi-trash3 me-1"></i>Remove
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 1000,
            once: true,
            offset: 120
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

