@model AppWebBeachSA.Models.Reservacion

@{
    ViewData["Title"] = "reservar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body style="background-color:#413E3E">
    <section class="d-flex align-items-center justify-content-center min-vh-100">
        <div class="container py-4">
            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-8">
                    <div>
                        <div class="card shadow-lg border-0" style="border-radius: 1rem;">
                            <div class="p-4">
                                <div class="card-body text-black">
                                    <h1 class="text-center mb-4">Reservation</h1>
                                    <form asp-action="reservar">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="row">
                                            <div class="form-group col-md-6">
                                                <label asp-for="PaqueteID" class="control-label">Package</label>
                                                <select class="form-control mt-2" asp-for="PaqueteID" id="paqueteSelect">
                                                    @foreach (var item in ViewBag.Paquetes)
                                                    {
                                                        <option value=@item.PaqueteID data-precio=@item.PrecioPorPersonaPorNoche>@item.Nombre</option>
                                                    }
                                                </select>
                                                <span asp-validation-for="PaqueteID" class="text-danger"></span>
                                            </div>

                                            <div class="form-group col-md-6">
                                                <label asp-for="FechaReservacion" class="control-label">Reservation Date</label>
                                                <input asp-for="FechaReservacion" class="form-control mt-2" />
                                                <span asp-validation-for="FechaReservacion" class="text-danger"></span>
                                            </div>

                                            <div class="form-group col-md-6">
                                                <label asp-for="Noches" class="control-label">Nights</label>
                                                <input asp-for="Noches" class="form-control mt-2" />
                                                <span asp-validation-for="Noches" class="text-danger"></span>
                                            </div>

                                            <div class="form-group col-md-6">
                                                <label asp-for="Personas" class="control-label ">Number of People</label>
                                                <input asp-for="Personas" class="form-control mt-2" />
                                                <span asp-validation-for="Personas" class="text-danger"></span>
                                            </div>

                                            <div class="form-group col-md-6">
                                                <label asp-for="TotalSinDescuento" class="control-label ">Total Without Discount</label>
                                                <input asp-for="TotalSinDescuento" class="form-control mt-2" />
                                                <span asp-validation-for="TotalSinDescuento" class="text-danger"></span>
                                            </div>

                                            <div class="form-group col-md-6">
                                                <label asp-for="DescuentoPorcentaje" class="control-label ">Discount Percentage</label>
                                                <input asp-for="DescuentoPorcentaje" class="form-control mt-2" />
                                                <span asp-validation-for="DescuentoPorcentaje" class="text-danger"></span>
                                            </div>

                                            <div class="form-group col-md-6">
                                                <label asp-for="TotalConDescuento" class="control-label ">Total With Discount</label>
                                                <input asp-for="TotalConDescuento" class="form-control mt-2" />
                                                <span asp-validation-for="TotalConDescuento" class="text-danger"></span>
                                            </div>

                                            <div class="form-group col-md-6">
                                                <label asp-for="FormaPago" class="control-label ">Payment Method</label>
                                                <input asp-for="FormaPago" class="form-control mt-2" />
                                                <span asp-validation-for="FormaPago" class="text-danger"></span>
                                            </div>

                                            <div class="form-group col-md-6">
                                                <label asp-for="NumeroCheque" class="control-label ">Check Number</label>
                                                <input asp-for="NumeroCheque" class="form-control mt-2" />
                                                <span asp-validation-for="NumeroCheque" class="text-danger"></span>
                                            </div>

                                            <div class="form-group col-md-6">
                                                <label asp-for="Banco" class="control-label ">Bank</label>
                                                <input asp-for="Banco" class="form-control mt-2" />
                                                <span asp-validation-for="Banco" class="text-danger"></span>
                                            </div>

                                            <div class="form-group col-md-6">
                                                <label asp-for="Prima" class="control-label ">Down Payment</label>
                                                <input asp-for="Prima" class="form-control mt-2" />
                                                <span asp-validation-for="Prima" class="text-danger"></span>
                                            </div>

                                            <div class="form-group col-md-6">
                                                <label asp-for="RestoEnMensualidades" class="control-label ">Remaining in Monthly Payments</label>
                                                <input asp-for="RestoEnMensualidades" class="form-control mt-2" />
                                                <span asp-validation-for="RestoEnMensualidades" class="text-danger"></span>
                                            </div>

                                            <div class="form-group col-md-6">
                                                <label asp-for="TipoCambio" class="control-label ">Exchange Rate</label>
                                                <input asp-for="TipoCambio" class="form-control mt-2" value=@ViewBag.tipoCambio />
                                                <span asp-validation-for="TipoCambio" class="text-danger"></span>
                                            </div>

                                            <div class="form-group col-md-6">
                                                <label asp-for="TotalUSD" class="control-label ">Total in USD</label>
                                                <input asp-for="TotalUSD" class="form-control mt-2" />
                                                <span asp-validation-for="TotalUSD" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group mt-3">
                                            <input type="submit" value="Create" class="btn btn-dark btn-lg w-100" />
                                        </div>
                                        <div>
                                            <a style="background-color:#b8860b;" class="btn w-100 mt-3 text-white" asp-action="Index">Back to List</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const paqueteSelect = document.getElementById("paqueteSelect");
        const totalSinDescuentoInput = document.getElementById("TotalSinDescuento");
        const totalUSD = document.getElementById("TotalUSD");

        // Escucha el cambio en el selector de paquetes
        paqueteSelect.addEventListener("change", function () {
            // Obtiene el precio del paquete seleccionado
            const selectedOption = paqueteSelect.options[paqueteSelect.selectedIndex];
            const precioPorPersonaPorNoche = selectedOption.getAttribute("data-precio");

            // Suponiendo que tienes un campo para el número de noches y personas
            const noches = document.getElementById("Noches").value || 1;
            const personas = document.getElementById("Personas").value || 1;

            // Calcula el total sin descuento
            const totalSinDescuento = precioPorPersonaPorNoche * noches * personas;

            // Actualiza el campo
            totalSinDescuentoInput.value = totalSinDescuento.toFixed(2);
        });

        // También actualiza el total si cambia el número de noches o personas
        document.getElementById("Noches").addEventListener("input", updateTotal);
        document.getElementById("Personas").addEventListener("input", updateTotal);

        function updateTotal() {
            const precioPorPersonaPorNoche = paqueteSelect.options[paqueteSelect.selectedIndex].getAttribute("data-precio");
            const noches = document.getElementById("Noches").value || 1;
            const personas = document.getElementById("Personas").value || 1;

            const totalSinDescuento = precioPorPersonaPorNoche * noches * personas;
            totalSinDescuentoInput.value = totalSinDescuento.toFixed(2);
            const tipocambio = document.getElementById("TipoCambio").value;
            const totalusa = totalSinDescuento / tipocambio;
            totalUSD.value = totalusa.toFixed(2);
        }
    });
</script>